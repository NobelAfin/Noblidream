<%- if controller_name != 'sessions' %>
  <%= link_to "Iniciar Sesion", new_session_path(resource_name), class: "btn btn-solid5 js-button-hero-get-free" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrarte", new_registration_path(resource_name), class: "btn btn-solid3 js-goto-signup js-button-hero-get-free" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "btn btn-solid3 js-goto-signup js-button-hero-get-free" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "¿No recibíste instrucciones de confirmación?", new_confirmation_path(resource_name), class: "btn btn-solid3 js-goto-signup js-button-hero-get-free" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "¿No recibiste instrucciones de desbloqueo?", new_unlock_path(resource_name), class: "btn btn-solid3 js-goto-signup js-button-hero-get-free" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Inicia Sesion Con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
